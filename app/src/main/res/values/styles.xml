<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--act去标题-->
    <style name="AppTheme.NotitleBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- topbar统一字体-->
    <style name="topbarText">
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--右字体样式设置-->
    <style name="topbarText.whiteRight">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="topbarText.blaceRight">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--title字体样式设置-->
    <style name="topbarText.whiteTitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="topbarText.blackTitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <!-- 自定义弹窗dialog的 progress 样式-->
    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <!--用餐style-->
    <style name="worker_select">
        <item name="android:background">@drawable/tv_select_style</item>
        <item name="android:drawableStart">@drawable/worker_bgchange_style</item>
        <item name="android:textColor">@drawable/text_change_style</item>
    </style>

    <!--用餐style-->
    <style name="student_select">
        <item name="android:background">@drawable/tv_select_style</item>
        <item name="android:drawableStart">@drawable/student_bgchange_style</item>
        <item name="android:textColor">@drawable/text_change_style</item>
    </style>
</resources>
